<VBox prefHeight="179.0" prefWidth="324.0" stylesheets="/style.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ControllerCultivo">
	<!-- TODO Add Nodes -->
	<Label alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" styleClass="titulo" text="Cultivo" />
	<GridPane>
		<children>
			<Label text="id" GridPane.columnIndex="0" GridPane.rowIndex="0" />
			<TextField fx:id="txtId" GridPane.columnIndex="1" GridPane.rowIndex="0" />
			<Label text="Hectareas Cultivadas" GridPane.columnIndex="0" GridPane.rowIndex="1" />
			<TextField fx:id="txtHectareasCultivadas" GridPane.columnIndex="1" GridPane.rowIndex="1" />
			<Label text="Especie" GridPane.columnIndex="0" GridPane.rowIndex="2" />
			<ChoiceBox fx:id="chbEspecie" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="2" />
			<Label text="Semilla" GridPane.columnIndex="0" GridPane.rowIndex="3" />
			<ChoiceBox fx:id="chbSemilla" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="3" />
			<Label text="Tipo Paquete" GridPane.columnIndex="0" GridPane.rowIndex="4" />
			<ChoiceBox fx:id="chbPaquete" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="4" />
			<Label text="Fecha Siembra" GridPane.columnIndex="0" GridPane.rowIndex="5" />
			<DatePicker fx:id="dateSiembra" GridPane.columnIndex="1" GridPane.rowIndex="5" />
		</children>
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
	</GridPane>
	<HBox prefHeight="0.0" prefWidth="279.0" spacing="3.0">
		<children>
			<Button mnemonicParsing="false" text="Guardar"
				onAction="#guardar" />
			<Button mnemonicParsing="false" text="Limpiar" onAction="#limpiar" />
			<Button mnemonicParsing="false" text="Borrar" onAction="#borrar" />
			<Button mnemonicParsing="false" text="Cancelar"
				onAction="#cancelar" />
		</children>
	</HBox>
</VBox>
